{
    "name": "network_example",
    "phase": "train",  // 'train' or 'test'
    "model": {
        "type": "template",  // 网络类型，对应 config_networks_new.py 中的类型
        "path": "path_to_pretrained_model",  // 预训练模型路径
        "batch_size": 1,
        "num_workers": 4,
        "network": {
            "in_channels": 1,
            "out_channels": 1,
            "hidden_channels": 64,
            "num_blocks": 4,
            "kernel_size": 3,
            "dropout": 0.1
        }
    },
    "train": {
        "optimizer": {
            "type": "Adam",
            "lr": 0.001,
            "betas": [0.9, 0.999],
            "weight_decay": 0.0001
        },
        "scheduler": {
            "type": "MultiStepLR",
            "milestones": [100, 200],
            "gamma": 0.1
        },
        "loss": {
            "type": "MSE"
        },
        "total_epochs": 300,
        "save_freq": 10
    },
    "data": {
        "box_size": 64
    }
}
